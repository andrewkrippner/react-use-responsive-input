{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "lib": ["ESNext", "DOM"],
        "module": "ES6",
        "moduleResolution": "node",
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES6"
    },
    "include": ["src/**/*"]
}
